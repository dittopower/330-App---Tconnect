<?xml version="1.0" encoding="UTF-8"?>
<BaseView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tconnect.Feed">
		<StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
			<ScrollView>
				<ListView x:Name="NoteListView" ItemsSource="{Binding EventView}" SelectedItem="{Binding SelectedEvent, Mode=TwoWay}">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition Height="2*"/>
										<RowDefinition Height="2*"/>
									</Grid.RowDefinitions>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="1*"/>
										<ColumnDefinition Width="1*"/>
									</Grid.ColumnDefinitions>
										<Label Grid.Row="0" Grid.Column="1" Text="{Binding titleText}" />
										<Label Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding TimeStamp}" />
										<Label Grid.Row="1" Grid.Column="0" Text="{Binding NoteDetail}" />
										<Label Grid.Row="1" Grid.Column="1" Text="{Binding LocationText}" />
									</Grid>
								</ViewCell>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
				</ScrollView>
			<Button Text = "+" Command = "{Binding NewNoteCommand}" VerticalOptions="End" HorizontalOptions="End" />
		</StackLayout>
</BaseView>
