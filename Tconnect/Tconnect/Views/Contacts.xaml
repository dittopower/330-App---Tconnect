<?xml version="1.0" encoding="UTF-8"?>
<BaseView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tconnect.Contacts">
	<ContentPage.Content>
		<StackLayout BackgroundColor="White">
				<ScrollView>
					<ListView x:Name="NoteListView" RowHeight="80" ItemsSource="{Binding PeopleView}" SelectedItem="{Binding SelectedPerson, Mode=TwoWay}">
						<ListView.ItemTemplate>
							<DataTemplate>
								<ViewCell >
									<Grid Padding="10,10,10,10">
										<Grid.RowDefinitions>
											<RowDefinition Height="1*"/>
											<RowDefinition Height="1*"/>
										</Grid.RowDefinitions>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="1*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
										</Grid.ColumnDefinitions>

										<Image Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="Start" Source="ProfileImage.jpg" WidthRequest="300" HeightRequest="300"/>
										<Label Text="{Binding Name}"  Grid.Row="0" Grid.Column="1" HorizontalOptions="Start" FontSize="Large"/>
										<Label Text="{Binding Lname}"  Grid.Row="0" Grid.Column="2" HorizontalOptions="Start" FontSize="Large"/>
										<Label Text="{Binding Org}"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>
									</Grid>
								</ViewCell>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
				</ScrollView>
			</StackLayout>
	</ContentPage.Content>
</BaseView>