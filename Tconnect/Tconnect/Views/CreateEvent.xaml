<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="Tconnect.CreateEvent">
	<StackLayout Padding = "0,0,0,0">
		<Entry x:Name = "NameEntry" Placeholder="Name"/>
		<Entry x:Name = "DateEntry" Placeholder="Date/Time"/>
		<Entry x:Name = "LocEntry" Placeholder="Location"/>
		<Entry x:Name = "DescEntry" Placeholder="Description"/>
		<Label Text="Invite List"/>
		<StackLayout>
			<ScrollView>
				<ListView x:Name="NoteListView">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition Height="2*"/>
										<RowDefinition Height="2*"/>
									</Grid.RowDefinitions>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="1*"/>
										<ColumnDefinition Width="1*"/>
									</Grid.ColumnDefinitions>
									<Label Grid.Row="0" Grid.Column="0" Text="{Binding TimeStamp}"/>
									<Label Grid.Row="1" Grid.Column="0" Text="{Binding titleText}"/>
								</Grid>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</ScrollView>
		</StackLayout>
	</StackLayout>
</ContentPage>
