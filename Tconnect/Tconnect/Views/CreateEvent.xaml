<?xml version="1.0" encoding="UTF-8"?>
<BaseView xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="Tconnect.CreateEvent">
	<StackLayout Padding = "0,0,0,0">
		<Entry x:Name = "TitleEntry" Placeholder="Name" Text="{Binding NoteTitle}"/>
		<Entry x:Name = "DateEntry" Placeholder="Date/Time" Text="{Binding NoteDate}"/>
		<Entry x:Name = "LocEntry" Placeholder="Location" Text="{Binding NoteLocationText}"/>
		<Entry x:Name = "DetailsEditor" Placeholder="Description" Text="{Binding EventDetails}"/>
		<Button HorizontalOptions = "CenterAndExpand" Text="Save" Command = "{Binding SaveNoteCommand}"/>
		<Label Text="Invite List"/>
		<StackLayout>
			<ScrollView>
				<ListView x:Name="NoteListView">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition Height="2*"/>
										<RowDefinition Height="2*"/>
									</Grid.RowDefinitions>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="1*"/>
										<ColumnDefinition Width="1*"/>
									</Grid.ColumnDefinitions>
									<Label Grid.Row="0" Grid.Column="0" Text="{Binding TimeStamp}"/>
									<Label Grid.Row="1" Grid.Column="0" Text="{Binding titleText}"/>
								</Grid>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</ScrollView>
		</StackLayout>
	</StackLayout>
</BaseView>
